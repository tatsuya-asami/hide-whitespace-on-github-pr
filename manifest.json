{
  "manifest_version": 3,
  "name": "Hide Whitespace on Github PR",
  "version": "1.1",
  "description": "Automatically hides whitespace changes in GitHub pull requests for specified repositories.",
  "host_permissions": [
    "https://github.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["with_whitespace.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icon/16_default.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "action": {
    "default_title": "Hide Whitespace",
    "default_popup": "",
    "default_icon": {
      "16": "icon/16_default.png",
      "48": "icon/48.png",
      "128": "icon/128.png"
    }
  },
  "author": "u2"
}